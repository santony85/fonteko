        return tot +" ‚Ç¨" ;
    }
    function creditFm(value, row){


        return  parseInt(value)/12.5;
    }
    

    

    
    function reloadTable(idc){
	    var $table = $('#mtable2');
        $('#mtable2').bootstrapTable('refresh', {
